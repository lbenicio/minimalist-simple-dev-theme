{
  "name": "dev-simple-minimal",
  "version": "0.4.1",
  "description": "A minimal website/blog theme for developers. It is a simple and clean theme for developers who want to showcase their work and write about their experiences.",
  "scripts": {
    "start": "npm run start:dev",
    "test": "npm run test:unit",
    "start:dev": "hugo server --config $PWD/theme.yml --source src --destination $PWD/.build/public --cacheDir $PWD/.build/cache --noBuildLock --buildDrafts --buildFuture --buildExpired --environment development",
    "build:prod": "hugo --minify --source src --destination $PWD/.build/public --cacheDir $PWD/.build/cache --noBuildLock --buildDrafts --buildFuture --buildExpired",
    "clear:cache": "rm -rf .build",
    "clear:all": "npm run clear:cache",
    "pagefind:dev": "npx -y pagefind --site public --serve",
    "pagefind:prod": "npx pagefind --site public",
    "test:static": "node test/static.test.js",
    "test:unit": "npm run test:static",
    "wiki:publish": "node scripts/publish-wiki.js --verbose --docs docs --branch master"
  },
  "type": "commonjs",
  "dependencies": {
    "pagefind": "^1.4.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "cssnano": "^7.1.1",
    "tailwindcss": "^3.4.16"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "minimist": "^1.2.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lbenicio/minimalist-simple-dev-theme"
  },
  "author": {
    "name": "Leonardo Benicio",
    "email": "hi@lbenicio.dev"
  },
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/lbenicio/minimalist-simple-dev-theme/issues"
  },
  "keywords": [
    "hugo",
    "theme",
    "minimal",
    "developer"
  ]
}
