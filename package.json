{
  "name": "dev-simple-minimal",
  "version": "0.3.5",
  "description": "A minimal website/blog theme for developers. It is a simple and clean theme for developers who want to showcase their work and write about their experiences.",
  "scripts": {
    "start:dev": "hugo server --buildDrafts --buildFuture --buildExpired",
    "build:prod": "hugo --minify",
    "clear:build": "rm -rf ./public",
    "clear:deps": "rm -rf ./node_modules",
    "clear:cache": "rm -rf resources && rm -rf .hugo_build.lock",
    "clear:all": "npm run clear:build && npm run clear:cache && npm run clear:deps",
    "pagefind:dev": "npx -y pagefind --site public --serve",
    "pagefind:prod": "npx pagefind --site public"
  },
  "author": "Leonardo Benicio",
  "license": "GPLv3",
  "type": "commonjs",
  "dependencies": {
    "pagefind": "^1.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "cssnano": "^6.0.1",
    "tailwindcss": "^3.4.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lbenicio/minimalist-simple-dev-theme"
  },
  "keywords": [
    "hugo",
    "theme",
    "minimal",
    "developer"
  ]
}
