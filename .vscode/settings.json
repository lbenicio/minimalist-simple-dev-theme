{
  "files.exclude": {
    ".build/**": true,
    "node_modules/": true
  },
  "search.exclude": {
    ".build/**": true,
    "node_modules/**": true
  },
  "files.watcherExclude": {
    ".build/**": true,
    "node_modules/**": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.schemaStore.enable": false,
  "terminal.integrated.env.osx": {
    "SASS_PATH": "${workspaceFolder}/node_modules"
  }
}
